{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1 class="card-title">Produit index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Prix</th>
                <th scope="col" >actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr class="table-active">
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td scope="row">
                  <button type="button" class="btn btn-primary"><a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a><br></button>
                    <button type="button" class="btn btn-primary"> <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
